{
  "name": "react-native-boost",
  "description": "ðŸš€ Boost your React Native app's performance with a single line of code",
  "version": "0.0.1",
  "main": "dist/plugin.js",
  "scripts": {
    "clean": "rm -rf plugin",
    "build": "yarn clean && esbuild src/plugin.ts --bundle --outfile=plugin/index.js --platform=node",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write .",
    "prepare": "husky",
    "release": "release-it"
  },
  "files": [
    "src",
    "plugin",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuatsu/react-native-boost.git"
  },
  "author": "Kuatsu App Agency <hello@kuatsu.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kuatsu/react-native-boost/issues"
  },
  "homepage": "https://github.com/kuatsu/react-native-boost#readme",
  "packageManager": "yarn@3.6.1",
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/helper-module-imports": "^7.25.0",
    "@babel/helper-plugin-utils": "^7.25.0",
    "@babel/plugin-syntax-jsx": "^7.25.0",
    "@babel/preset-typescript": "^7.25.0",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^17.0.2",
    "@eslint/js": "^9.21.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/babel__helper-module-imports": "^7.0.0",
    "@types/babel__helper-plugin-utils": "^7.0.0",
    "@types/node": "^20",
    "babel-plugin-tester": "^11.0.4",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "eslint-plugin-unicorn": "^57.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "release-it": "^18.1.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.6"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
